//- div.row
div.col-lg-12
  h1.page-header New memo

  form.form-horizontal(role='form')
    #note-select-container.form-group
    #tag-btn-container.form-group
      label.col-sm-2.control-label Tag
      .col-sm-10.tag-container
    .form-group
      label.col-sm-2.control-label(for='inputTitle') Title
      .col-sm-10
        input#inputTitle.form-control(type='text', placeholder='Title', autofocus='')
    .form-group
      label.col-sm-2.control-label(for='inputContent') Content
      .col-sm-10
        input#inputContent.form-control(type='text', placeholder='Content')
    .form-group
      .col-sm-offset-2.col-sm-10
        .btn-group
          button.btn.btn-primary.btn-lg(type='button')
            i.fa.fa-floppy-o
            span &nbsp;Save
          a.btn.btn-default.btn-lg(href='#')
            i.fa.fa-arrow-circle-up
            span &nbsp;Cancel

